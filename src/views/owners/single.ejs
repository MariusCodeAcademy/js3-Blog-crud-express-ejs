<%- include('../partials/head.ejs') %> <%- include('../partials/nav.ejs') %>
<h2>Single owner page</h2>
<!-- cia turim matyti vieno ownerio html  -->

<h1> <%= found.name %> </h1>
<h2><%= found.email %></h2>
<h2><%= found.createdAt.toLocaleTimeString() %></h2>

<a class="btn btn-info" href="/owners/edit/<%= found._id %>">Edit this owner</a>
<a class="btn btn-primary" href="/house/new/<%= found._id %>">Add house to this owner</a>

<h5 class="my-3">Owners properties</h5>

<ul class="list-group">
  <% houses.forEach(({nr, street, town}) => { %>
  <li class="list-group-item"><%= `${nr} ${street}, ${town}` %> </li>
  <% }) %>
</ul>

